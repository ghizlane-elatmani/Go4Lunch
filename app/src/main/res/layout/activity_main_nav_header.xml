<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@drawable/ic_navheader_background"
    android:backgroundTintMode="src_atop"
    android:backgroundTint="#AB272525"
    android:paddingBottom="20dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">


    <TextView
        android:id="@+id/go4Lunch_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_above="@id/name_header"
        android:layout_marginBottom="50dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/urlPicture_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/urlPicture_header"
        android:layout_toRightOf="@+id/urlPicture_header"
        android:textColor="#fff"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/urlPicture_header"
        android:layout_alignBottom="@id/urlPicture_header"/>

</RelativeLayout>