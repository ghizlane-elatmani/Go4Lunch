<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restoWorkmatePhoto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restoWorkmateName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/quantum_grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/restoWorkmatePhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/restoWorkmatePhoto"
        app:layout_constraintTop_toTopOf="@id/restoWorkmatePhoto"/>

</androidx.constraintlayout.widget.ConstraintLayout>

